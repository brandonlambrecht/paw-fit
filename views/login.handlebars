
<div>
  <div>
    <h2>Login</h2>

    <form id='login-form'>
      <div class='mb-3'>
      <label for="InputEmail1" class="form-label">Email address</label>        
      <input class='form-control' type='text' id='email-login' aria-describedby="emailHelp">
      <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
      </div>
      <div class="mb-3">
 <label for="InputPassword1" class="form-label">Password</label>
      <input  class="form-control" type='password' id='password-login' />
      </div>
      <div class>
        <button class="btn btn-primary" type='submit'>Login</button>
      </div>
    </form>
  </div>


  <div class=''>
    <h2>Create new account</h2>

    <form id='signup-form'>
      <div class='mb-3'>
        <label for='name-signup' class="form-label">First name</label>
        
        <input class='form-control' type='text' id='first-name-signup' />
      </div>
      <div class='mb-3'>
        <label for='name-signup' class="form-label">Last name</label>
        <input class='form-control' type='text' id='last-name-signup' />
      </div>
      <div class='mb-3'>
        <label for='email-signup' class="form-label">Email</label>
        <input class='form-control' type='text' id='email-signup' />
      </div>
      <div class='mb-3'>
        <label for='password-signup' class="form-label">Password</label>
        <input class='form-control' type='password' id='password-signup' />
      </div>
      <div class='mb-3'>
        <button class='btn btn-primary' type='submit'>Sign-up</button>
      </div>
    </form>
  </div>
</div>

<script src='/js/login.js'></script>