<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<h2>
  Hello
  {{first_name}}, welcome to your pets profile, here you will find health, diet, activity, and record information for your pet.
</h2>


{{!-- Diet Form --}}
<form class="diet-form">
  <label for="amount">Cups of food consumed per day </label><br>
  <input type="number" step="0.5" min="0" id="amount" name="amount"><br>

  <label for="favorite">Favorite foods </label><br>
  <input type="text" id="favorite" name="favorite"><br>

  <label for="allergies">List any food allergies </label><br>
  <input type="text" id="allergies" name="allergies"><br>

  <input type="submit" value="Submit">

</form>

{{!-- Health Form --}}
<form class="health-form">
  <label for="health">List all vaccinations</label><br>
  <input type="text" id="health" name="health"><br>

  <label for="neuter">Neuter,Spay or Neither</label><br>
  <select type id="neuter" name="neuter"><br>
    <option value="">Please select from options</option>
    <option value="Neutered">Neutered</option>
    <option value="Spayed">Spayed</option>
    <option value="Neither">Neither</option>
  </select><br>

  <label for="disease">List any illness or disease</label><br>
  <input type="text" id="disease" name="disease"><br>

  <input type="submit" value="Submit">

{{!-- Activity Form --}}
</form>
<form class="activity-form">
  <label for="active">Average minutes activity per day</label><br>
  <input type="text" id="active" name="active"><br>

    <label for="sleep">Average hours sleep per day</label><br>
  <input type="text" id="sleep" name="sleep"><br>

  <label for="toy">Favorite toy </label><br>
  <input type="text" id="toy" name="toy"><br>

  <input type="submit" value="Submit">

</form>

<div>
  {{#each Animals as |animal|}}
  <div class="card mb-4">

    {{!-- Tab Nav --}}
    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active" id="general-tab" data-bs-toggle="tab" data-bs-target="#general-{{animal.id}}" type="button" role="tab" aria-controls="general" aria-selected="true">General</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="health-tab" data-bs-toggle="tab" data-bs-target="#health-{{animal.id}}" type="button" role="tab" aria-controls="health" aria-selected="false">Health</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="diet-tab" data-bs-toggle="tab" data-bs-target="#diet-{{animal.id}}" type="button" role="tab" aria-controls="diet" aria-selected="false">Diet</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="activity-tab" data-bs-toggle="tab" data-bs-target="#activity-{{animal.id}}" type="button" role="tab" aria-controls="activity" aria-selected="false">Activity</button>
      </li>
    </ul>
    
    <div class="tab-content" id="myTabContent">
      {{!-- General Tab --}}
      <div class="tab-pane fade show active" id="general-{{animal.id}}" role="tabpanel" aria-labelledby="general-tab">
          {{animal.pet_name}}<br>
          {{animal.animal_type}}<br>
          {{animal.pet_gender}}<br>
          {{animal.pet_age}}<br>
          {{animal.pet_color}}<br>
          {{animal.pet_weight}}<br>
          {{animal.pet_breed}}<br>
          <br>
      </div>
      {{!-- Health Tab --}}
      <div class="tab-pane fade show" id="health-{{animal.id}}" role="tabpanel" aria-labelledby="health-tab">
        
        <button data-id="{{animal.id}}" class="new-health-btn">Add Health Record</button>

        {{#each animal.Health as |health|}}
          <div>
            vaccination: {{health.health_vaccination}}<br>
            Neuter: {{health.health_neuter}}<br>
            Disease: {{health.health_diseases}}<br>
            <br>
          </div>
        {{/each}}
      </div>

      {{!-- Diet Tab --}}
      <div class="tab-pane fade show" id="diet-{{animal.id}}" role="tabpanel" aria-labelledby="diet-tab">
        
        <button data-id="{{animal.id}}" class="new-diet-btn">Add Diet record</button>

        {{#each animal.Diets as |diet|}}
        {{!-- add bootstrap class for card --}}
          <div >
            Amount of Food: {{diet.food_amount}}<br>
            Favorite Food: {{diet.food_favorite}}<br>
            Allergies: {{diet.food_allergies}}<br>
            <br>
          </div>
        {{/each}}
      </div>

      {{!-- Activity Tab --}}
       <div class="tab-pane fade show" id="activity-{{animal.id}}" role="tabpanel" aria-labelledby="activity-tab">
        <h3>Activity</h3>
        <button data-id="{{animal.id}}" class="new-activity-btn">Add activity record</button>

        {{#each animal.Activities as |activity|}}
        <p>hello</p>
          {{!-- <div>
            Amount of Food: {{diet.food_amount}}<br>
            Favorite Food: {{diet.food_favorite}}<br>
            Allergies: {{diet.food_allergies}}<br>
            <br>
          </div> --}}
        {{/each}}
      </div>

    </div>
  </div>
  {{/each}}
</div>


<script src="/js/profile.js"></script>
<script src="/js/profileDiet.js"></script>


