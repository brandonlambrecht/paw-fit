{{!-- Diet Form --}}
<form class="diet-form">
  <label for="amount">Cups of food consumed per day </label><br>
  <input type="number" step="0.5" min="0" id="amount" name="amount"><br>

  <label for="favorite">Favorite foods </label><br>
  <input type="text" id="favorite" name="favorite"><br>

  <label for="allergies">List any food allergies </label><br>
  <input type="text" id="allergies" name="allergies"><br>

  <input type="submit" value="Submit">

</form>

{{!-- Health Form --}}
<form class="health-form">
  <label for="health">List all vaccinations</label><br>
  <input type="text" id="health" name="health"><br>

  <label for="neuter">Neuter,Spay or None</label><br>
  <select type id="neuter" name="neuter"><br>
    <option value="">Please select from options</option>
    <option value="Neutered">Neutered</option>
    <option value="Spayed">Spayed</option>
    <option value="None">None</option>
  </select><br>

  <label for="disease">List any illness or disease</label><br>
  <input type="text" id="disease" name="disease"><br>

  <input type="submit" value="Submit">
</form>

{{!-- Activity Form --}}
<form class="activity-form">
  <label for="active">Average minutes activity per day</label><br>
  <input type="number" id="active" name="active"><br>

    <label for="sleep">Average hours sleep per day</label><br>
  <input type="number" id="sleep" name="sleep"><br>

  <label for="toy">Favorite toy </label><br>
  <input type="text" id="toy" name="toy"><br>

  <input type="submit" value="Submit">

</form>

<div>
  
  {{#each Animals as |animal|}}
  <div class="card mb-4">

    {{!-- Tab Nav --}}
    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active btn btn-outline-dark" id="general-tab" data-bs-toggle="tab" data-bs-target="#general-{{animal.id}}" type="button" role="tab" aria-controls="general" aria-selected="true">General</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link btn btn-outline-dark" id="health-tab" data-bs-toggle="tab" data-bs-target="#health-{{animal.id}}" type="button" role="tab" aria-controls="health" aria-selected="false">Health</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link btn btn-outline-dark" id="diet-tab" data-bs-toggle="tab" data-bs-target="#diet-{{animal.id}}" type="button" role="tab" aria-controls="diet" aria-selected="false">Diet</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link btn btn-outline-dark" id="activity-tab" data-bs-toggle="tab" data-bs-target="#activity-{{animal.id}}" type="button" role="tab" aria-controls="activity" aria-selected="false">Activity</button>
      </li>
    </ul>
    
    <div class="tab-content" id="myTabContent">
      {{!-- General Tab --}}
      <div class="tab-pane fade show active" id="general-{{animal.id}}" role="tabpanel" aria-labelledby="general-tab">
        <div class="card col-11 m-3 border border-3 rounded-5 border border-dark-subtle">
          <div class="card-body">
            <p>
            Name : {{animal.pet_name}}
            </p>
            <p>
            Type : {{animal.animal_type}}
            </p>
            <p>
            Gender : {{animal.pet_gender}}
            </p>
            <p>
            Age : {{animal.pet_age}}
            </p>
            <p>
            Color : {{animal.pet_color}}
            </p>
            <p>
            Weight : {{animal.pet_weight}}
            </p>
            <p>
            Breed : {{animal.pet_breed}}
            </p>
            
          </div>
        </div>
      </div>
      {{!-- Health Tab --}}
      <div class="tab-pane fade show" id="health-{{animal.id}}" role="tabpanel" aria-labelledby="health-tab">
     

        <button data-id="{{animal.id}}" class="new-health-btn  btn btn-info ml-4 mt-2">Add Health record</button>
        {{!-- <button data-id="{{animal.id}}" type="button" class="new-health-btn btn btn btn-info ml-4 mt-2" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="@mdo">Add Health Record</button> --}}

        <div class="card col-11 m-3 border border-3 rounded-5 border border-dark-subtle">
          <div class="card-body">
        {{#each animal.Health as |health|}}
          <div>
            <p>
            Vaccination : {{health.health_vaccination}}
            </p>
            <p>
            Fixed : {{health.health_neuter}}
            </p>
            <p>
            Disease : {{health.health_diseases}}
            </p>
          </div>
        </div>
      </div>
        {{/each}}
      </div>

      {{!-- Diet Tab --}}
      <div class="tab-pane fade show" id="diet-{{animal.id}}" role="tabpanel" aria-labelledby="diet-tab">
        <button data-id="{{animal.id}}" class="new-diet-btn  btn btn-info ml-4 mt-2">Add Diet record</button>
        {{!-- <button type="button"  data-id="{{animal.id}}" class="new-diet-btn btn btn-info ml-4 mt-2" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="@fat">Add Diet record</button> --}}
        <div class="card col-11 m-3 border border-3 rounded-5 border border-dark-subtle">
          <div class="card-body">


        {{#each animal.Diets as |diet|}}
          <div>
            <p>
            Cups of food per day : {{diet.food_amount}}
            </p>
            <p>
            Favorite Food : {{diet.food_favorite}}
            </p>
            <p>
            Allergies : {{diet.food_allergies}}
            </p>            
          </div>
        </div>

      </div>
        {{/each}}
      </div>

      {{!-- Activity Tab --}}

      <div class="tab-pane fade show" id="activity-{{animal.id}}" role="tabpanel" aria-labelledby="activity-tab">
        <button data-id="{{animal.id}}" class="new-activity-btn  btn btn-info ml-4 mt-2">Add activity record</button>
        <div class="card col-11 m-3 border border-3 rounded-5 border border-dark-subtle">
          <div class="card-body">

        {{#each animal.Activities as |activity|}}


          <div>
            <p>
            Active minutes per day : {{activity.active_minutes_day}}
            </p>
            <p>
            Favorite Toy: {{activity.favorite_toy}}
            </p>
            <p>
            Hours sleep per night: {{activity.avg_sleep_day}}
            </p>          
          </div>
        </div>

          </div>
        {{/each}}
      </div>

    </div>
  </div>
  {{/each}}
</div>


