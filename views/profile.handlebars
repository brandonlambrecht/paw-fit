<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<h2>
  Hello
  {{first_name}}, welcome to {{animal.pet_name}}'s profile, here you will find health, diet, activity, and record information for your pet.
</h2>


<div class="new-health">
    <button class="new-health-btn">Add Pet Health History</button>
</div>



<form class="health-form">
  <label for="health">vaccination: </label><br>
  <input type="text" id="health" name="health"><br>

  <label for="neuter">neuter or spay: </label><br>
  <input type="text" id="neuter" name="neuter"><br>

  <label for="disease">what kind of illnesses does the animal have: </label><br>
  <input type="text" id="disease" name="disease"><br>

  <input type="submit" value="Submit">

</form>






<div>
  {{#each Animals as |animal|}}
    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active" id="general-tab" data-bs-toggle="tab" data-bs-target="general-{{animal.id}}" type="button" role="tab" aria-controls="general" aria-selected="true">General</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="health-tab" data-bs-toggle="tab" data-bs-target="#health-{{animal.id}}" type="button" role="tab" aria-controls="health" aria-selected="false">Health</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact-{{animal.id}}" type="button" role="tab" aria-controls="contact" aria-selected="false">Diet</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact-{{animal.id}}" type="button" role="tab" aria-controls="contact" aria-selected="false">Activity</button>
      </li>
    </ul>
    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active" id="general" role="tabpanel" aria-labelledby="general-tab">
        {{#each animal.Health as |health|}}
          <div>
            vaccination: {{health.pet_vac}}<br>
            Neuter: {{health.pet_neuter}}<br>
            Disease: {{health.pet_disease}}<br>
            <br>
          </div>
        {{/each}}


  <div>
    {{animal.pet_name}}<br>
    {{animal.animal_type}}<br>
    {{animal.pet_gender}}<br>
    {{animal.pet_age}}<br>
    {{animal.pet_color}}<br>
    {{animal.pet_weight}}<br>
    {{animal.pet_breed}}<br>
  
    <br>
  </div>
{{/each}}
</div>


<script src="/js/profile.js"></script>
